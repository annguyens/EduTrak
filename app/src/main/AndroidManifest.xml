<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.edutrak">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
     <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".after_enable"></activity>
        <activity android:name=".after_manage" />
        <activity android:name=".editprofile" />
        <activity android:name=".EditTaskDesk" />
        <activity android:name=".NewEvent" />
        <activity android:name=".Settings" />
        <activity android:name=".ScheduleScanner" />
        <activity android:name=".Calendar" />
        <activity android:name=".activity_forgotpassword" />
        <activity android:name=".activity_homepage" />
        <activity android:name=".activity_registration_next" />
        <activity android:name=".activity_registration" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>